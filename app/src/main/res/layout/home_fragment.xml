<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    tools:context=".HomeActivity">

    <ImageButton
        android:id="@+id/h_family"
        android:layout_width="162dp"
        android:layout_height="195dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061"
        app:srcCompat="@drawable/family" />

    <ImageButton
        android:id="@+id/h_comedy"
        android:layout_width="179dp"
        android:layout_height="155dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/orage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:srcCompat="@drawable/comedy"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="220dp" />

    <ImageButton
        android:id="@+id/h_romance"
        android:layout_width="183dp"
        android:layout_height="153dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/orage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_family"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/romance" />

    <ImageButton
        android:id="@+id/h_animation"
        android:layout_width="164dp"
        android:layout_height="251dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/orage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_comedy"
        app:layout_constraintVertical_bias="0.03"
        app:srcCompat="@drawable/animation" />

    <ImageButton
        android:id="@+id/h_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/orage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_romance"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/action" />

    <ImageButton
        android:id="@+id/h_horror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/divider_horizontal_bright"
        android:backgroundTint="@color/orage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_animation"
        app:layout_constraintVertical_bias="0.207"
        app:srcCompat="@drawable/horror" />

</androidx.constraintlayout.widget.ConstraintLayout>