<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/h_action"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/h_action" />

            <ImageButton
                android:id="@+id/h_animation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/h_action"
                app:layout_constraintStart_toEndOf="@+id/h_action"
                app:layout_constraintTop_toTopOf="@+id/h_action"
                app:srcCompat="@drawable/h_animaton" />

            <ImageButton
                android:id="@+id/h_comedy"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/h_animation"
                app:layout_constraintStart_toEndOf="@+id/h_animation"
                app:layout_constraintTop_toTopOf="@+id/h_animation"
                app:srcCompat="@drawable/h_comedy" />

            <ImageButton
                android:id="@+id/h_romance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/h_comedy"
                app:layout_constraintStart_toEndOf="@+id/h_comedy"
                app:layout_constraintTop_toTopOf="@+id/h_comedy"
                app:srcCompat="@drawable/h_romance" />

            <ImageButton
                android:id="@+id/h_family"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/h_romance"
                app:layout_constraintStart_toEndOf="@+id/h_romance"
                app:layout_constraintTop_toTopOf="@+id/h_romance"
                app:srcCompat="@drawable/h_family" />

            <ImageButton
                android:id="@+id/h_horror"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/h_family"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/h_family"
                app:layout_constraintTop_toTopOf="@+id/h_family"
                app:srcCompat="@drawable/h_horrow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_hf" />

    <ImageView
        android:id="@+id/headerText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:paddingBottom="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header_hfragment" />

    <ImageView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footer_slidebar" />


</androidx.constraintlayout.widget.ConstraintLayout>
